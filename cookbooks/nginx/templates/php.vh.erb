server {
    listen       80;
    server_name <%= @app_name %>.takkyuuplayer.vagrant;
    index       index.php index.html index.htm;
    root /web/<%= @app_name %>;
    charset     utf-8;
    access_log  /var/log/nginx/vh/<%= @app_name %>-access.local.log;
    error_log   /var/log/nginx/vh/<%= @app_name %>-error.local.log;

    location ~ \.php$ {
       fastcgi_pass   unix:/var/run/php5-fpm.sock;
       fastcgi_index  index.php;
       fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
       include        fastcgi_params;
    }
}

<% if @ssl %>
server {
    listen       443;
    server_name <%= @app_name %>.takkyuuplayer.vagrant;
    index       index.php index.html index.htm;
    root /web/<%= @app_name %>;
    charset     utf-8;
    access_log  /var/log/nginx/vh/<%= @app_name %>-access.local.log;
    error_log   /var/log/nginx/vh/<%= @app_name %>-error.local.log;

    ssl                  on;
    ssl_protocols        TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers          ALL:!ADH:!EXPORT:!MD5:!DES:!SSLv2:RC4+RSA:+HIGH:+MEDIUM:+LOW;
    ssl_certificate      <%= @ssl[:ssl_certificate] %>;
    ssl_certificate_key  <%= @ssl[:ssl_certificate_key] %>;

    location ~ \.php$ {
       fastcgi_pass   unix:/var/run/php5-fpm.sock;
       fastcgi_index  index.php;
       fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
       include        fastcgi_params;
    }
}
<% end %>
