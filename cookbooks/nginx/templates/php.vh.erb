server {
    listen       80;
    server_name <%= @app_name %>.takkyuuplayer.vagrant;
    index       index.php index.html index.htm;
    root /web/<%= @app_name %>;
    charset     utf-8;
    access_log  /var/log/nginx/vh/<%= @app_name %>-access.local.log;
    error_log   /var/log/nginx/vh/<%= @app_name %>-error.local.log;

    location ~ \.php$ {
       fastcgi_pass   unix:/var/run/php5-fpm.sock;
       fastcgi_index  index.php;
       fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
       include        fastcgi_params;
    }
}

<% if @ssl %>
server {
    listen       443 ssl http2 default_server;
    server_name  <%= @fqdn %>;
    index       index.php index.html index.htm;
    root /web/<%= @app_name %>;
    charset     utf-8;
    access_log  /var/log/nginx/vh/<%= @app_name %>-access.local.log;
    error_log   /var/log/nginx/vh/<%= @app_name %>-error.local.log;

    ssl_certificate      <%= @ssl[:ssl_certificate] %>;
    ssl_certificate_key  <%= @ssl[:ssl_certificate_key] %>;

    ssl_session_cache    shared:SSL:1m;
    ssl_session_timeout  5m;

    ssl_ciphers AESGCM:HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers  on;


    location ~ \.php$ {
       fastcgi_pass   unix:/var/run/php5-fpm.sock;
       fastcgi_index  index.php;
       fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
       include        fastcgi_params;
    }
}
<% end %>
