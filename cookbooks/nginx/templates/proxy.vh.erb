upstream <%= @app_name %>-backend {
    server 127.0.0.1:<%= @port %>;
}

server {
    listen       80;
    server_name  <%= @fqdn %>;

    location ~ \.\w+$ {
        root /web/<%= @app_name %>/public;
        expires 90d;
    }

    location / {
        proxy_redirect off;

        proxy_set_header Host               $host;
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header X-Forwarded-Host   $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;

       proxy_pass http://<%= @app_name %>-backend;
    }
}

<% if @ssl %>
server {
    listen       443;
    server_name  <%= @fqdn %>;

    ssl                  on;
    ssl_protocols        TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers          ALL:!ADH:!EXPORT:!MD5:!DES:!SSLv2:RC4+RSA:+HIGH:+MEDIUM:+LOW;
    ssl_certificate      <%= @ssl[:ssl_certificate] %>;
    ssl_certificate_key  <%= @ssl[:ssl_certificate_key] %>;

    location ~ \.\w+$ {
        root /web/<%= @app_name %>/public;
        expires 90d;
    }

    location / {
        proxy_redirect off;

        proxy_set_header Host               $host;
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header X-Forwarded-Host   $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;

       proxy_pass http://<%= @app_name %>-backend;
    }

}
<% end %>
